<h1>All clients</h1>
@if(@Model.Count == 0)
{
  <h3>You have not added any client</h3>
}
@foreach(var client in Model)
{
  <ul>
    <li><a href="/clients/@client.GetId()">@client.GetName()</a> | <a href="/clients/edit/@client.GetId()">Edit</a> | <a href="/clients/delete/@client.GetId()">Delete</a></li>
  </ul>
}
<p><a href="/clients/new">Add a new client</a></p>
<form action="/clients/cleared" method="post">
    <button type="submit">Clear all clients</button>
</form>
<p><a href="/">Return Home</a></p>
