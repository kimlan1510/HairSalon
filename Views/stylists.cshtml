<h1>All Stylists</h1>
@if(@Model.Count == 0)
{
  <h3>You have not added any stylist</h3>
}
@foreach(var stylist in Model)
{
  <ul>
    <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a> | <a href="/stylists/edit/@stylist.GetId()">Edit</a> | <a href="/stylists/delete/@stylist.GetId()">Delete</a></li>

  </ul>
}
<form action="/stylists/cleared" method="post">
    <button type="submit">Clear all stylists</button>
</form>
<p><a href="/stylists/new">Add a new stylist</a></p>

<p><a href="/">Return Home</a></p>
